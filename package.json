{
  "name": "turbo-modern-starter",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:update": "vitest run --update",
    "test:related": "vitest related",
    "test:ui-components": "vitest run packages/ui",
    "test:modules": "vitest run packages/module",
    "test:web": "vitest run apps/web",
    "test:extension": "vitest run apps/extension",
    "test:docs": "vitest run apps/docs",
    "e2e": "playwright test -c ./e2e/playwright.config.ts",
    "e2e:ui": "playwright test -c ./e2e/playwright.config.ts --ui",
    "e2e:debug": "playwright test -c ./e2e/playwright.config.ts --debug",
    "e2e:report": "playwright show-report ./e2e/test-results/html",
    "clean": "turbo run clean && rm -rf node_modules",
    "pr:review": "bash ./scripts/pr-review.sh",
    "mcp:memory": "npx -y @modelcontextprotocol/server-memory",
    "mcp:github": "docker run -i --rm -e GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN} ghcr.io/github/github-mcp-server",
    "mcp:playwright": "npx @playwright/mcp@latest",
    "mcp:claude": "claude mcp serve",
    "mcp:all": "concurrently \"pnpm mcp:memory\" \"pnpm mcp:github\" \"pnpm mcp:playwright\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.14.1",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}